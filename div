$("btnCloseDrawer").addEventListener("click",()=>{STATE.ui.drawerOpen=false;persist()});
$("toggleRun").addEventListener("click",()=>{if(STATE.ui.blackout)return;const c=stage.style.backgroundColor||"#000";stage.style.backgroundColor=(c==="#000"||c==="rgb(0, 0, 0)")?"#fff":"#000"});
$("btnToggleMotion").addEventListener("click",()=>{STATE.ui.motionOn=!STATE.ui.motionOn;persist()});
$("padCloseBtn").addEventListener("click",()=>{STATE.ui.padOpen=false;persist()});
$("padEditBtn").addEventListener("click",()=>{STATE.ui.padEdit=!STATE.ui.padEdit;persist()});
$("btnToggleUniversals").addEventListener("click",()=>{STATE.ui.universalsCollapsed=!STATE.ui.universalsCollapsed;persist()});
$("btnToggleRegistry").addEventListener("click",()=>{STATE.ui.registryCollapsed=!STATE.ui.registryCollapsed;persist()});
$("btnToggleActive").addEventListener("click",()=>{STATE.ui.activeCollapsed=!STATE.ui.activeCollapsed;persist()});
$("btnToggleSets").addEventListener("click",()=>{STATE.ui.setsCollapsed=!STATE.ui.setsCollapsed;persist()});
$("btnToggleBulk").addEventListener("click",()=>{STATE.ui.bulkCollapsed=!STATE.ui.bulkCollapsed;persist()});
$("btnTogglePresets").addEventListener("click",()=>{STATE.ui.presetsCollapsed=!STATE.ui.presetsCollapsed;persist()});
$("btnSaveRoom").addEventListener("click",()=>{const r=canon($("roomInput").value||"LINK");const u=$("roomUrlInput").value||"";const idx=STATE.payload.roomPresets.findIndex(p=>canon(p.room)===r);if(idx>=0)STATE.payload.roomPresets[idx].roomUrl=u;else STATE.payload.roomPresets.push({room:r,roomUrl:u});persist()});
$("btnSetActiveRoom").addEventListener("click",()=>{const r=canon($("roomInput").value||"BASE");const u=$("roomUrlInput").value||"";const idx=STATE.payload.roomPresets.findIndex(p=>canon(p.room)===r);if(idx>=0)STATE.payload.roomPresets[idx].roomUrl=u;else STATE.payload.roomPresets.push({room:r,roomUrl:u});STATE.room=r;STATE.roomUrl=u;persist()});
$("btnGoActive").addEventListener("click",()=>{if(STATE.roomUrl){persist();window.location.href=STATE.roomUrl}});
$("btnNewTabActive").addEventListener("click",()=>{if(STATE.roomUrl){persist();window.open(STATE.roomUrl,"_blank")}});
$("armedGo").addEventListener("click",()=>{if(STATE.roomUrl){persist();window.location.href=STATE.roomUrl}});
$("armedNewTab").addEventListener("click",()=>{if(STATE.roomUrl){persist();window.open(STATE.roomUrl,"_blank")}});
$("btnCreateSet").addEventListener("click",()=>{const id=uid();STATE.payload.sets.unshift({id,label:canon($("setNameInput").value||"SET"),items:[]});persist()});
$("btnSaveSetItems").addEventListener("click",()=>{const s=STATE.payload.sets.find(x=>x.id===STATE.ui.activeSetId);if(!s)return;const lines=$("setItemsInput").value.split("\n").filter(l=>l.trim()&&!l.startsWith("#"));s.items=lines.map(l=>{let label="",url="";if(l.includes("|")){const p=l.split("|");label=p[0].trim();url=p.slice(1).join("|").trim()}else url=l.trim();if(!label)label=deriveNameFromUrl(url);return{label:canon(label),url}});persist()});
$("btnPinSet").addEventListener("click",()=>{if(!STATE.ui.activeSetId)return;const i=STATE.ui.pinnedSets.indexOf(STATE.ui.activeSetId);if(i>=0)STATE.ui.pinnedSets.splice(i,1);else STATE.ui.pinnedSets.push(STATE.ui.activeSetId);persist()});

window.addEventListener("keydown",ev=>{if(ev.repeat)return;const typing=document.activeElement&&(document.activeElement.tagName==="TEXTAREA"||document.activeElement.tagName==="INPUT");if(ev.code==="Space"&&!typing){ev.preventDefault();if(!STATE.ui.blackout)$("toggleRun").click()}if(ev.shiftKey&&ev.key.toUpperCase()==="I"&&!typing){ev.preventDefault();STATE.ui.invert=!STATE.ui.invert;persist()}if(ev.shiftKey&&ev.key.toUpperCase()==="N"&&!typing){ev.preventDefault();STATE.ui.blackout=!STATE.ui.blackout;persist()}if(ev.shiftKey&&ev.key.toUpperCase()==="F"&&!typing){ev.preventDefault();STATE.ui.fullscreen=!STATE.ui.fullscreen;persist()}},{passive:false});

(function(){const box=$("ketaNote"),head=$("ketaHead");let drag=false,ox=0,oy=0;head.addEventListener("mousedown",ev=>{if(ev.target.closest("button")||STATE.ui.blackout)return;drag=true;const r=box.getBoundingClientRect();ox=ev.clientX-r.left;oy=ev.clientY-r.top;box.style.left=r.left+"px";box.style.top=r.top+"px";box.style.right="auto"});window.addEventListener("mousemove",ev=>{if(!drag)return;box.style.left=Math.max(0,Math.min(ev.clientX-ox,window.innerWidth-40))+"px";box.style.top=Math.max(44,Math.min(ev.clientY-oy,window.innerHeight-40))+"px"});window.addEventListener("mouseup",()=>{if(!drag)return;drag=false;const r=box.getBoundingClientRect();STATE.ui.noteRect={x:Math.round(r.left),y:Math.round(r.top),w:Math.round(r.width),h:Math.round(r.height)};persist()});try{new ResizeObserver(()=>{if(drag||STATE.ui.blackout)return;const r=box.getBoundingClientRect();STATE.ui.noteRect={x:Math.round(r.left),y:Math.round(r.top),w:Math.round(r.width),h:Math.round(r.height)};persist()}).observe(box)}catch(_){}})();

(function(){const s=$("drawerSizer");let drag=false;s.addEventListener("mousedown",ev=>{if(!STATE.ui.drawerOpen)return;drag=true;ev.preventDefault()});window.addEventListener("mousemove",ev=>{if(!drag)return;const usable=window.innerHeight-44-34;const h=Math.max(usable*0.15,Math.min(window.innerHeight-34-ev.clientY,usable*0.95));STATE.ui.drawerH=h/usable;root.style.setProperty("--drawer-h",STATE.ui.drawerH)});window.addEventListener("mouseup",()=>{if(!drag)return;drag=false;persist()})})();

render();
