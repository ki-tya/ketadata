<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Green Light Pendulum</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
            background: #0a0a0a;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        #canvas {
            display: block;
        }
        #instructions {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            color: rgba(100, 255, 100, 0.6);
            font-family: Arial, sans-serif;
            font-size: 14px;
            text-align: center;
            z-index: 10;
            pointer-events: none;
            transition: opacity 1s;
        }
    </style>
</head>
<body>
    <canvas id="canvas"></canvas>
    <div id="instructions">Press SPACE to start/stop</div>
    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        
        let isAnimating = false;
        let animationFrame;
        let angle = 0;
        let pendulumLength = Math.min(canvas.width, canvas.height) * 0.35;
        let trails = [];
        
        function drawPendulum() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Calculate pendulum swing (slower, more hypnotic)
            angle += 0.015;
            let swing = Math.sin(angle) * 0.6; // Swings 60 degrees each way
            
            let centerX = canvas.width / 2;
            let centerY = canvas.height / 3;
            
            // Calculate pendulum bob position
            let bobX = centerX + Math.sin(swing) * pendulumLength;
            let bobY = centerY + Math.cos(swing) * pendulumLength;
            
            // Draw string
            ctx.strokeStyle = 'rgba(100, 255, 100, 0.3)';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(centerX, centerY);
            ctx.lineTo(bobX, bobY);
            ctx.stroke();
            
            // Draw glowing pendulum bob
            let glowIntensity = (Math.sin(angle * 2) + 1) / 2;
            
            // Outer glow
            let gradient = ctx.createRadialGradient(bobX, bobY, 0, bobX, bobY, 80);
            gradient.addColorStop(0, `rgba(50, 255, 50, ${0.6 + glowIntensity * 0.4})`);
            gradient.addColorStop(0.3, `rgba(50, 255, 50, ${0.3 + glowIntensity * 0.3})`);
            gradient.addColorStop(1, 'rgba(50, 255, 50, 0)');
            
            ctx.fillStyle = gradient;
            ctx.beginPath();
            ctx.arc(bobX, bobY, 80, 0, Math.PI * 2);
            ctx.fill();
            
            // Inner bright core
            let coreGradient = ctx.createRadialGradient(bobX, bobY, 0, bobX, bobY, 30);
            coreGradient.addColorStop(0, '#ffffff');
            coreGradient.addColorStop(0.5, '#88ff88');
            coreGradient.addColorStop(1, '#00ff00');
            
            ctx.fillStyle = coreGradient;
            ctx.beginPath();
            ctx.arc(bobX, bobY, 30, 0, Math.PI * 2);
            ctx.fill();
            
            // Add trail effect
            ctx.strokeStyle = `rgba(100, 255, 100, ${0.1 + glowIntensity * 0.1})`;
            ctx.lineWidth = 4;
            ctx.beginPath();
            ctx.arc(bobX, bobY, 40, 0, Math.PI * 2);
            ctx.stroke();
            
            animationFrame = requestAnimationFrame(drawPendulum);
        }
        
        function start() {
            document.getElementById('instructions').style.opacity = '0';
            drawPendulum();
        }
        
        function stop() {
            cancelAnimationFrame(animationFrame);
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            document.getElementById('instructions').style.opacity = '0.6';
            angle = 0;
        }
        
        document.addEventListener("keydown", (event) => {
            if (event.key === " " || event.code === "Space") {
                event.preventDefault();
                if (isAnimating) {
                    stop();
                } else {
                    start();
                }
                isAnimating = !isAnimating;
            }
        });
        
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            pendulumLength = Math.min(canvas.width, canvas.height) * 0.35;
        });
    </script>
</body>
</html>
